<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SkorActivity">

    <LinearLayout
        android:id="@+id/lineerSkor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerInParent="true"
        android:background="@drawable/lineer_back"
        android:elevation="2dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Soru Sayısı"
            android:textColor="#000"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="25dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/soruSayisi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="25dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DOGRU"
            android:textColor="#000"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="25dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/doruSayisi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="25dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YANLIS"
            android:textColor="#000"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="25dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/yanlisSayisi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="25dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/bitir"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lineerSkor"
        android:layout_marginTop="35dp"
        android:text="BİTİR"
        android:textSize="15dp"
        android:textStyle="bold"
        android:background="@drawable/buton_back"
        />


</RelativeLayout>